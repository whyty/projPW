{% extends 'includes/template.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default gnuplot">
            <form class="form-horizontal row-border" id="plot-form" method="post" action="#"
                  enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="col-md-12 control-label">Plot Examples</label>
                    </div>
                    <div class="col-md-12">
                        <select name="plot-example" class="form-control">
                            <option value="">Select ploting example</option>
                            {% if examples %}
                                {% for example in examples %}
                                    <option value="{{ example.integration }}">{{ example.name }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="form-group btn-wrapper clearfix">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-default pull-right">Process</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div id="result" class="hidden">
                            <img src="" alt="Gnuplot result" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row alert-wrapper">
            <div class="col-md-12">
                <div class="alert" role="alert"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}