{% extends 'includes/template.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default gnuplot">
            <form class="form-horizontal row-border" id="plot-form" method="post" action="#"
                  enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="col-md-12 control-label">Plot Image Name</label>
                    </div>
                    <div class="col-md-12">
                        <input type="text" name="plot_image_name" value="" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="col-md-12 control-label">Plot Name</label>
                    </div>
                    <div class="col-md-12">
                        <input type="text" name="plot_name" value="" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="col-md-12 control-label">Commands for plot calculations</label>
                    </div>
                    <div class="col-md-12">
                        <textarea class="form-control" name="plot_command" rows="10"></textarea>
                    </div>
                </div>
                <div class="form-group btn-wrapper clearfix">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-default pull-right">Generate</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div id="result" class="hidden">
                            <img src="" alt="Gnuplot result" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row alert-wrapper">
            <div class="col-md-12">
                <div class="alert" role="alert"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}