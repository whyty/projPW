{% extends 'includes/template.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default panel-radius">
            <form class="form-horizontal row-border" id="upload-form" method="post" action="/login"
                  enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="col-md-12 control-label">Plot Examples</label>
                    </div>
                    <div class="col-md-8">
                        <select name="plot-example" class="form-control">
                            <option value="">Select ploting example</option>
                            <option value="simple_plot_first">Simple plot First Example</option>
                            <option value="simple_plot_second">Simple plot Second Example</option>
                            <option value="simple_plot_third">Simple plot Third Example</option>
                        </select>
                    </div>
                </div>
                <div class="form-group btn-wrapper clearfix">
                    <div class="col-md-3"></div>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-default pull-right">Process</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div id="result" class="hidden">
                            <img src="" alt="Gnuplot result" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row alert-wrapper">
            <div class="col-md-12">
                <div class="alert" role="alert"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}